@model Comercios.Models.Producto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div id="createProdDiv" class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.costo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.precioSugerido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.precioSugerido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.precioSugerido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.esFabircado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.esFabircado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.esFabircado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div id="tiempoPrevistoDiv" style="display: none;" class="form-group">
            @Html.LabelFor(model => model.tiempoPrevisto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tiempoPrevisto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tiempoPrevisto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div id="paisOrigenDiv" class="form-group">
            @Html.LabelFor(model => model.paisOrigen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.paisOrigen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.paisOrigen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div id="cantMinimaDiv" class="form-group">
            @Html.LabelFor(model => model.cantidadMinima, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadMinima, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cantidadMinima, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" id="create" class="btn btn-default" />
            </div>
        </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script>           
    $(function () {
        $("#esFabircado").click(function () {
            if ($(this).is(':checked')) {
                $("#tiempoPrevisto").rules("add", 'required');
                //$("#tiempoPrevisto").rules("add", { min: 0 });
                $("#tiempoPrevistoDiv").show();                              
                //$("#paisOrigen").rules("remove", 'required');
                $("#paisOrigenDiv").hide();
                $("#cantidadMinima").rules("remove", 'required');
                //$("#tiempoPrevisto").rules("remove", 'min');
                $("#cantMinimaDiv").hide();                
            }
            else {                
                $("#tiempoPrevisto").rules("remove", 'required');
                //$("#tiempoPrevisto").rules("remove", 'min');
                $("#tiempoPrevistoDiv").hide();
                //$("#paisOrigen").rules("add", 'required');
                $("#paisOrigenDiv").show();
                $("#cantidadMinima").rules("add", 'required');
                //$("#cantidadMinima").rules("add", { min: 0 });
                $("#cantMinimaDiv").show();               
            }
        });
    });    
        </script>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
